@model RosaMaríaBookstore.Pages.Products.ProductsModel;
@using RosaMaríaBookstore.Models;
@{
    Producto product=Model.Producto;
    String image="/images/not-image.png",description="No hay descripción",
    tradermark="No se ha agregado una marca";

    if (product.IdimagenNavigation!=null) {
        image="/images/products/"+@product.IdimagenNavigation.Nombre;
    }

    if (product.Descripcion!=null && !product.Descripcion.Equals("") && !product.Descripcion.Equals("null"))
    {
        description=product.Descripcion;
    }

    if (product.IdmarcaNavigation!=null)
    {
        tradermark=product.IdmarcaNavigation.Nombre;
    }
}

<div class="row">
    <div class="col-lg-12">
        <div class=" card text-center mb-0">
            <div class="card-body">
                <img src="@image" class="img-fluid image-height avatar-lg img-thumbnail" alt="profile-image">

                <h4 class="mb-0 mt-2">@product.Nombre</h4>
                <p class="text-muted font-14">@product.Codigo</p>

                @if(product.Estado==1){
                <button type="button" class="btn btn-success btn-sm mb-2" data-name="Status"
                    data-idproduct="@product.Id">Habilitado</button>
                }else{
                <button type="button" class="btn btn-danger btn-sm mb-2" data-name="Status"
                    data-idproduct="@product.Id">Deshabilitado</button>
                }

                <div class="text-left mt-3">
                    <h4 class="font-13 text-uppercase">Descripción :</h4>
                    <p class="text-muted font-13 mb-3">
                        @description
                    </p>
                    <p class="text-muted mb-2 font-13"><strong>Categoría :</strong> <span
                            class="ml-2">@product.IdcategoriaNavigation.Nombre</span></p>
                    <p class="text-muted mb-2 font-13"><strong>Marca :</strong> <span class="ml-2">@tradermark</span>
                    </p>

                    <p class="text-muted mb-1 font-13"><strong>Stock minímo :</strong> <span
                            class="ml-2">@product.Stockminimo</span></p>
                </div>
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col-->
</div>