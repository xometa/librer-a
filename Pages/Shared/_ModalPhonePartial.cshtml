@model RosaMaríaBookstore.Pages.Clients.ClientsModel
@using RosaMaríaBookstore.Models;
@{
    Telefonoinstitucion phone;
    String id = "";
}

<div id="phone-filters" data-showRegisters="@Model.showRegisters" data-total="@Model.total"
    data-current-page="@Model.currentPage" data-max="@Model.pageSize">
</div>

@if (Model.phoneList.Count == 0)
{
    <tr>
        <td colspan="4" class="text-center">
            No hay números de contacto
        </td>
    </tr>
}
@for (int i = 0; i < Model.phoneList.Count; i++)
{
    phone = Model.phoneList[i];
    <tr>
        <td>
            @(i+1)
        </td>
        <td>
            @phone.IdtelefonoNavigation.Telefono1
        </td>
        <td>
            <div>
                @{
                    id = "switch" + phone.Idtelefono;}
                @if (phone.IdtelefonoNavigation.Estado == 1)
                {
                    <input type="checkbox" id="@id" checked data-switch="success" data-idphone="@phone.Idtelefono">
                    <label for="@id" data-on-label="Si" data-off-label="No" class="mb-0 d-block"></label>
                }
                else
                {
                    <input type="checkbox" id="@id" data-switch="success" data-idphone="@phone.Idtelefono">
                    <label for="@id" data-on-label="Si" data-off-label="No" class="mb-0 d-block"></label>
                }
            </div>
        </td>
        <td>
            <span class="action-icon text-warning pointer" data-idphone="@phone.Idtelefono"> <i
                    class="mdi mdi-pencil mdi-24px"></i></span>
            <span class="action-icon text-danger pointer" data-idphone="@phone.Idtelefono"> <i
                    class="mdi mdi-delete mdi-24px"></i></span>
        </td>
    </tr>
}