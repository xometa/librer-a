@model RosaMaríaBookstore.Pages.Clients.ClientsModel;
@{
int idPerson=Model.Person.Id;
int idInstitution=Model.Institution.Id;
}

@if(idPerson!=0){
<input class="form-control" asp-for="Person.Id" hidden>
}
@if(idInstitution!=0){
<input class="form-control" asp-for="Institution.Id" hidden>
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="px-3">
    <div class="alert-info py-2 font-weight-bold px-2">
        Datos del representante
    </div>
</div>
<div class="form-group px-3 pt-2">
    <label asp-for="Person.Nombre" class="font-weight-bold">Nombre<span class="text-danger">*</span></label>
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <span class="uil-user-square"></span>
            </div>
        </div>
        <input type="text" asp-for="Person.Nombre" class="form-control" placeholder="Nombre del cliente">
    </div>
    <span asp-validation-for="Person.Nombre" class="text-danger"></span>
</div>
<div class="form-group px-3">
    <label asp-for="Person.Apellido" class="font-weight-bold">Apellido<span class="text-danger">*</span></label>
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <span class="uil-user-square"></span>
            </div>
        </div>
        <input type="text" asp-for="Person.Apellido" class="form-control" placeholder="Apellido del cliente">
    </div>
    <span asp-validation-for="Person.Apellido" class="text-danger"></span>
</div>
<div class="form-group px-3">
    <label asp-for="Person.Dui" class="font-weight-bold">DUI</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <span class="uil-atm-card"></span>
            </div>
        </div>
        <input type="text" asp-for="Person.Dui" class="form-control" placeholder="00000000-0" data-toggle="input-mask" data-mask-format="00000000-0">
    </div>
    <span asp-validation-for="Person.Dui" class="text-danger"></span>
</div>
<div class="px-3">
    <div class="alert-info py-2 font-weight-bold px-2">
        Datos de la institución
    </div>
</div>
<div class="form-group px-3 pt-2">
    <label asp-for="Institution.Nombre" class="font-weight-bold">Nombre<span class="text-danger">*</span></label>
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <span class="uil-files-landscapes-alt"></span>
            </div>
        </div>
        <input type="text" asp-for="Institution.Nombre" class="form-control" placeholder="Nombre de la institución">
    </div>
    <span asp-validation-for="Institution.Nombre" class="text-danger"></span>
</div>

<div class="form-group px-3">
    <label asp-for="Institution.Direccion" class="font-weight-bold">Dirección<span
                class="text-danger">*</span></label>
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <span class="uil-location-point"></span>
            </div>
        </div>
        <textarea type="text" asp-for="Institution.Direccion" class="form-control"
                placeholder="Dirección de la institución"></textarea>
    </div>
    <span asp-validation-for="Institution.Nombre" class="text-danger"></span>
</div>